/* pages/destination/destination.wxss */
page, .container {
    width: 100%;
    height: 100%;
}

.location {
    position: fixed;
    width: 100%;
    height: 88rpx;
    z-index: 99;
    top: 0;
    background-color: #fff;
    font-size: 28rpx;
    box-shadow: 3px 5px 10px #e0e0e0;
}

.location-city {
    height: 88rpx;
    position: absolute;
    width: 160rpx;
    line-height: 88rpx;
    text-align: center;
    color: #999999;
}

.content-image {
    width: 80rpx;
    height: 119rpx;
    line-height: 119rpx;
    text-align: center;
}

.content-image image {
    width: 20rpx;
    height: 20rpx;
    opacity: .3;
    color: #999999;
}