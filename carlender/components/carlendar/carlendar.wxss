/* components/carlendar/carlendar.wxss */
carlendar {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    box-sizing: border-box;
}

/* 标题 */

.carlendar-title {
    line-height: 70rpx;
    font-size: 30rpx;
    text-align: left;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.carlendar-title .ctrl {
    display: inline-block;
    padding: 0 20rpx;
    background: #f5f5f5;
    border-radius: 10rpx;
}

.carlendar-title .item {
    display: inline-block;
    vertical-align: middle;
    line-height: 50rpx;
}

.carlendar-title .title {
    min-width: 300rpx;
    text-align: center;
}

.carlendar-title .today {
    float: right;
    margin-top: 10rpx;
}

/* 星期 */

.carlendar-week {
    display: flex;
    text-align: center;
    padding: 20rpx 10rpx;
    box-sizing: border-box;
    border-top: 1rpx solid #e0e0e0;
    border-bottom: 1rpx solid #e0e0e0;
    background: #f5f5f5;
}

.carlendar-week .item {
    flex: 1;
}

/* 日期 */

.carlendar-container {
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx 10rpx;
    box-sizing: border-box;
}

.carlendar-container .grid {
    display: inline-block;
    width: 14.28571428571429%;
    line-height: 70rpx;
    position: relative;
    z-index: 1;
}

.carlendar-container .grid .self {
    position: absolute;
    top: 0rpx;
    right: 0rpx;
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
    background: rgb(49, 120, 228);
    border: 3rpx solid #fff;
}

.carlendar-container .grid.gray {
    color: #ccc;
}

.carlendar-container .grid .wrap.select {
    background: rgb(49, 120, 228);
    border-radius: 10rpx;
    color: #fff;
    width: 80%;
    margin: 0 auto;
}

/* 滚动展示 */

.carlendar-x {
    white-space: nowrap;
    padding: 20rpx 0;
    height: 110rpx;
}

.carlendar-x .grid {
    display: inline-block;
    line-height: 70rpx;
    position: relative;
    z-index: 1;
    width: 70rpx;
    text-align: center;
    background: #f5f5f5;
    border-radius: 10rpx;
    margin-left: 20rpx;
}
.carlendar-x .grid:last-child{
    margin-right: 20rpx;
}

.carlendar-x .grid .self {
    position: absolute;
    top: 0rpx;
    right: 0rpx;
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
    background: rgb(49, 120, 228);
    border: 3rpx solid #fff;
}

.carlendar-x .grid.gray {
    color: #ccc;
}

.carlendar-x .grid .wrap.select {
    background: rgb(49, 120, 228);
    border-radius: 10rpx;
    color: #fff;
    margin: 0 auto;
}